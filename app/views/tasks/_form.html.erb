<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-xs-3">
  <div class="form-group">
    <%= f.label :label %><br>
    <%= f.text_field :label, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.collection_select :category_id, Category.all.collect, :id, :label, {:include_blank => "Please Select"}, {:class => "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :due_date %><br>
    <%= f.date_select(:due_date, {:include_blank => true, :default => nil}) %>
  </div>
  <div class="form-group">
    <%= f.label :completion_date %><br>
    <%= f.date_select(:completion_date, {:include_blank => true, :default => nil}) %>
  </div>
  <div class="form-group">
    <%= f.submit class:"btn btn-primary" %>
  </div>
  </div>
</div>
<% end %>
